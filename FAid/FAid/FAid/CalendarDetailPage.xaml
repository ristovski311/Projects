<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:FAid.Model"
             x:Class="FAid.CalendarDetailPage"
             Title="{Binding Title}"
             xmlns:viewmodel="clr-namespace:FAid.ViewModel">
    <CollectionView>
        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="7" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemsSource>
            <x:Array Type="{x:Type model:Day}">
                <model:Day Id="1" StartingOffset="6" Month="May" Task1="Testing Task 1" Task2="Testing task 2"></model:Day>
                <model:Day Id="2" StartingOffset="1" Month="May" Task1="Testing Task 1.2" Task2="Testing task 2" Task3="Task 3"></model:Day>
                <model:Day Id="3" StartingOffset="1" Month="May" Task1="Testing Task 1.3" Task2="Testing task 2.3"></model:Day>
                <model:Day Id="4" StartingOffset="1" Month="May" Task1="Testing Task 1" Task2="Testing task 2"></model:Day>
                <model:Day Id="5" StartingOffset="1" Month="May"></model:Day>
                <model:Day Id="6" StartingOffset="1" Month="May" Task1="Testing Task 1.3" Task2="Testing task 2.3"></model:Day>
                <model:Day Id="7" StartingOffset="1" Month="May"></model:Day>
                <model:Day Id="8" StartingOffset="1" Month="May"></model:Day>
                <model:Day Id="9" StartingOffset="1" Month="May" Task1="Testing Task 1.3" Task2="Testing task 2.3"></model:Day>
                <model:Day Id="10" StartingOffset="1" Month="May"></model:Day>
                <model:Day Id="11" StartingOffset="1" Month="May"></model:Day>
                <model:Day Id="12" StartingOffset="1" Month="May"></model:Day>
                <model:Day Id="13" StartingOffset="1" Month="May" Task1="Testing Task 1.3" Task2="Testing task 2.3"></model:Day>
                <model:Day Id="14" StartingOffset="1" Month="May"></model:Day>
                <model:Day Id="15" StartingOffset="1" Month="May" Task1="Testing Task 1.2" Task2="Testing task 2" Task3="Task 3"></model:Day>
                <model:Day Id="16" StartingOffset="1" Month="May"></model:Day>
                <model:Day Id="17" StartingOffset="1" Month="May" Task1="Testing Task 1" Task2="Testing task 2"></model:Day>
                <model:Day Id="18" StartingOffset="1" Month="May"></model:Day>
                <model:Day Id="19" StartingOffset="1" Month="May"></model:Day>
                <model:Day Id="20" StartingOffset="1" Month="May" Task1="Testing Task 1" Task2="Testing task 2"></model:Day>
                <model:Day Id="21" StartingOffset="1" Month="May" Task1="Testing Task 1" Task2="Testing task 2"></model:Day>
                <model:Day Id="22" StartingOffset="1" Month="May"></model:Day>
                <model:Day Id="23" StartingOffset="1" Month="May" Task1="Testing Task 1.3" Task2="Testing task 2.3"></model:Day>
                <model:Day Id="24" StartingOffset="1" Month="May"></model:Day>
                <model:Day Id="25" StartingOffset="1" Month="May" Task1="Testing Task 1.2" Task2="Testing task 2" Task3="Task 3"></model:Day>
                <model:Day Id="26" StartingOffset="1" Month="May" Task1="Testing Task 1.3" Task2="Testing task 2.3"></model:Day>
                <model:Day Id="27" StartingOffset="1" Month="May" Task1="Testing Task 1" Task2="Testing task 2"></model:Day>
                <model:Day Id="28" StartingOffset="1" Month="May"></model:Day>
                <model:Day Id="29" StartingOffset="1" Month="May"></model:Day>
                <model:Day Id="30" StartingOffset="1" Month="May"></model:Day>
                <model:Day Id="31" StartingOffset="1" Month="May" Task1="Testing Task 1.3" Task2="Testing task 2.3"></model:Day>
            </x:Array>
        </CollectionView.ItemsSource>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:Day">
                <Grid RowDefinitions="120">
                    <Border StrokeThickness="1"
                            Stroke="White"
                            Grid.ColumnSpan="{Binding StartingOffset}">
                        <VerticalStackLayout>
                            <Label x:Name="LblId" 
                                   Text="{Binding Id}" 
                                   VerticalTextAlignment="Center"  
                                   HorizontalTextAlignment="Center"></Label>
                            <Label x:Name="LblT1" 
                                   Text="{Binding Task1}" 
                                   FontSize="7" 
                                   VerticalTextAlignment="Center" 
                                   HorizontalTextAlignment="Center" 
                                   Padding="2" 
                                   BackgroundColor="YellowGreen"
                                   IsVisible="{Binding Task1Empty}"></Label>
                            <Label x:Name="LblT2" 
                                   Text="{Binding Task2}" 
                                   FontSize="7" 
                                   VerticalTextAlignment="Center" 
                                   HorizontalTextAlignment="Center" 
                                   Padding="2" 
                                   Background="LightCoral"
                                   IsVisible="{Binding Task2Empty}"></Label>
                            <Label x:Name="LblT3" 
                                   Text="{Binding Task3}" 
                                   FontSize="7" 
                                   VerticalTextAlignment="Center" 
                                   HorizontalTextAlignment="Center" 
                                   Padding="2" 
                                   Background="LightSeaGreen"
                                   IsVisible="{Binding Task3Empty}"></Label>
                            <Label x:Name="LblT4" 
                                   Text="{Binding Task4}" 
                                   FontSize="7" 
                                   VerticalTextAlignment="Center" 
                                   HorizontalTextAlignment="Center" 
                                   Padding="2" 
                                   Background="SaddleBrown"
                                   IsVisible="{Binding Task4Empty}"></Label>
                            <Label x:Name="LblT5" 
                                   Text="{Binding Task5}" 
                                   FontSize="7" 
                                   VerticalTextAlignment="Center" 
                                   HorizontalTextAlignment="Center" 
                                   Padding="2" 
                                   BackgroundColor="DarkKhaki"
                                   IsVisible="{Binding Task5Empty}"></Label>
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>