<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FAid.MainPage"
             xmlns:viewmodel="clr-namespace:FAid.ViewModel"
             x:DataType="viewmodel:MainViewModel">

    <ScrollView>
        <Grid Padding="25"
              RowSpacing="15"
              ColumnSpacing="15"
              >
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="90" />
                <RowDefinition Height="90" />
                <RowDefinition Height="90" />
                <RowDefinition Height="90" />
                <RowDefinition Height="90" />
                <RowDefinition Height="90" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Text="FAid"
                   FontFamily="glsnecb"
                   FontSize="60"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   Grid.ColumnSpan="2"
                   Grid.RowSpan="1">

            </Label>

            <Button FontFamily="glsnecb"
                    FontSize="40"
                    Text="Notes"
                    Grid.Row="1"
                    Grid.Column="0"
                    Command="{Binding GoToNotesCommand}"
                    >
            
            </Button>

            <Button FontFamily="glsnecb"
                    FontSize="40"
                    Text="Labs"
                    Grid.Row="1"
                    Grid.Column="1">

            </Button>

            <Border Grid.Row="2"
                    Grid.Column="0"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="1"
                    StrokeShape="RoundRectangle 40,40,40,40">
                
                <Button Text="Calendar"
                        FontFamily="glsnecb"
                        FontSize="40"
                        Padding="10"
                        Command="{Binding GoToCalendarCommand}">

                </Button>
            
            </Border>
            

            <Border 
                Stroke="DarkGray"
                StrokeThickness="2"
                Grid.Row="2"
                Grid.Column="1"
                StrokeShape="RoundRectangle 40,40,40,40"
                                >
                <Label FontFamily="glsnecb"
                    FontSize="30"
                        Text="Your faculty helper!"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center">

                </Label>
            </Border>



            <Button FontFamily="glsnecb"
                    FontSize="40"
                    Text="Food"
                    Grid.Row="3"
                    Grid.Column="1">

            </Button>

            <Button FontFamily="glsnecb"
                    FontSize="40"
                    Text="Projects"
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">

            </Button>
            
            <Label Text="Ristovski Nikola - 2024"
                   Grid.Row="5"
                   TextDecorations="Underline"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Start"
                   Grid.ColumnSpan="2">
                
            </Label>


        </Grid>
    </ScrollView>

</ContentPage>
